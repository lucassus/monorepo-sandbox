{
  "compilerOptions": {
    /* Basic Options */
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true, // Fixes go-to-definition in code editors

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true
  }
}
