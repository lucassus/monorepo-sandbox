{
  "compilerOptions": {
    /* Basic Options */
    "module": "commonjs",
    "target": "ES2017",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true, // Fixes go-to-definition in code editors

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,

    "baseUrl": ".",
    "paths": {
      "@sandbox/*": ["./packages/*/src"]
    }
  }
}
